{% extends "layouts/default.njk" %}

{% from "macros/button.njk" import button %}

{% set titleSuffix = "Tracks for " + id %}

{% block head %}
  {{ super() }}

  <link rel="stylesheet" href="/assets/playlist.css"/>
{% endblock %}

{% block content %}
  <h1>Playlist: {{ name }}</h1>

  <div class="actions">
    <div class="pagination">
      {% if prev %}
        {{ button({
          text: "Previous",
          href: "?page=" + prev
        }) }}
      {% endif %}
      {% if next %}
        {{ button({
          text: "Next",
          href: "?page=" + next
        }) }}
      {% endif %}
    </div>
    <div class="selected">
      {% set exportSelectedUrl = "/playlist/" + id + "/export" %}
      <a href="{{ exportSelectedUrl }}">Export selected</a>
      <a href="{{ exportSelectedUrl }}">Export all</a>
      <span><span id="total-selected">{{ totalSelected }}</span> / 50 selected</span>
    </div>
  </div>

  <ul role="list">
    {% for track in tracks %}
      <li>
        <input type="checkbox" data-type="song" data-song="{{ track.id }}" {{ "checked" if track.checked }}/>{{
        track.name }} :: {{ track.id }}
      </li>
    {% endfor %}
  </ul>
{% endblock %}
