{% extends "layouts/default.njk" %}

{% block head %}
  {{ super() }}
  
  <link rel="stylesheet" href="/assets/playlists.css" />
{% endblock %}

{% set titleSuffix = "Playlists for " + username %}

{% block content %}
  {% if prev %}
    <a href="?page={{ prev }}">Previous</a>
  {% endif %}
  {% if next %}
    <a href="?page={{ next }}">Next</a>
  {% endif %}
  <div class="playlists-container">
    <ul role="list">
      {% for playlist in playlists %}
        <li><a href="/playlist/{{ playlist.id }}">{{ playlist.name or "<i>Unnamed Playlist</i>" | safe }}</a> :: {{ playlist.id }}</li>
      {% endfor %}
    </ul>
  </div>
{% endblock content %}
